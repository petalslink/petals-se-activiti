<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <artifactId>parent</artifactId>
      <groupId>org.ow2.petals.integration.tests</groupId>
      <version>4.3.2-SNAPSHOT</version>
      <relativePath />
   </parent>

   <groupId>org.ow2.petals.integration.tests.se.activiti</groupId>
   <artifactId>launcher-standalone-activiti</artifactId>
   <name>Petals Integration Tests - Tests - Components - Petals SE Activiti - Service invocations</name>
   <packaging>pom</packaging>

   <dependencies>
      <dependency>
         <groupId>org.ow2.petals.samples</groupId>
         <artifactId>sa-vacation-sample</artifactId>
         <version>${project.version}</version>
         <type>jbi-service-assembly</type>
      </dependency>
      <dependency>
         <artifactId>petals-se-activiti</artifactId>
         <groupId>org.ow2.petals</groupId>
         <type>jbi-component</type>
      </dependency>
      <dependency>
         <artifactId>petals-bc-soap</artifactId>
         <groupId>org.ow2.petals</groupId>
         <type>jbi-component</type>
      </dependency>
      <dependency>
         <groupId>org.ow2.petals</groupId>
         <artifactId>petals-esb-default-zip</artifactId>
         <type>zip</type>
      </dependency>
      <dependency>
      <!-- We force the version of SLF4J API to avoid the error "tried to access field
           org.slf4j.impl.StaticLoggerBinder.SINGLETON from class org.slf4j.LoggerFactory" -->
         <groupId>org.slf4j</groupId>
         <artifactId>slf4j-api</artifactId>
         <version>1.5.10</version>
      </dependency>
      <dependency>
         <groupId>com.h2database</groupId>
         <artifactId>h2</artifactId>
         <version>1.4.178</version>
      </dependency>
   </dependencies>

   <build>
      <plugins>
         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <groupId>org.apache.maven.plugins</groupId>
            <executions>
               <execution>
                  <id>assembly</id>
                  <configuration>
                     <finalName>${project.artifactId}</finalName>
                     <appendAssemblyId>false</appendAssemblyId>
                     <ignoreDirFormatExtensions>true</ignoreDirFormatExtensions>
                     <attach>false</attach>
                     <descriptors>
                        <descriptor>src/main/assembly/assembly.xml</descriptor>
                     </descriptors>
                  </configuration>
                  <phase>package</phase>
                  <goals>
                     <goal>attached</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <id>run-it</id>
                  <phase>integration-test</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <target description="tests" unless="maven.test.skip">
                        <property name="maven_plugin_classpath" refid="maven.plugin.classpath" />

                        <ant antfile="${project.build.directory}/${project.artifactId}/build.xml" dir="${project.build.directory}/${project.artifactId}" />
                     </target>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-help-plugin</artifactId>
            <version>2.2</version>
            <executions>
               <execution>
                  <id>settings</id>
                  <configuration>
                     <output>${project.build.directory}/${project.artifactId}/settings.xml</output>
                  </configuration>
                  <phase>process-test-resources</phase>
                  <goals>
                     <goal>effective-settings</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.ow2.petals</groupId>
            <artifactId>maven-petals-plugin</artifactId>
         </plugin>
      </plugins>
   </build>

   <scm>
      <connection>scm:git:https://github.com/petalslink/petals-se-activiti.git</connection>
      <developerConnection>${project.scm.connection}</developerConnection>
   </scm>
</project>
